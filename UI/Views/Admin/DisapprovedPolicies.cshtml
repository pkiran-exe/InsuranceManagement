


@model List<DAL.AppliedPolicy>

@{
    ViewBag.Title = "Disapproved Policies";
}

<style>
    h2 {
        color: #dc3545; /* Red color for the heading */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-family: Arial, sans-serif;
        color: #333;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #dc3545; /* Red background color for the header */
        color: #fff; /* White text color */
    }

    tbody tr:hover {
        background-color: #f5f5f5;
    }

    .status-disapproved {
        background-color: #dc3545; /* Red background color for disapproved status */
        color: #fff; /* White text color */
        padding: 8px 12px;
        border-radius: 4px;
    }
</style>

<h2>Disapproved Policies</h2>

<table>
    <thead>
        <tr>
            <th>Policy Id</th>
            <th>Policy Number</th>
            <th>Applied Date</th>
            <th>Category</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var policy in Model)
        {
            <tr>
                <td>@policy.AppliedPolicyId</td>
                <td>@policy.PolicyNumber</td>
                <td>@policy.AppliedDate.ToShortDateString()</td>
                <td>@policy.Category</td>
                <td>
                    <span class="status-disapproved">Disapproved</span>
                </td>
            </tr>
        }
    </tbody>
</table>
