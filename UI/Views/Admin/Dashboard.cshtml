<style>
    .content {
        margin-left: 270px;
        padding: 20px;
    }

    /* Style the web form elements as needed */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 1px;
        border: 1px solid #ccc;
        border-radius: 4px;
        outline: none;
    }

    .card {
        margin: 2px; /* Adjust the margin to reduce space between cards */
        padding: 1px; /* Adjust the padding to control the size of the cards */
        border: none;
        background-color:darkslateblue ;
