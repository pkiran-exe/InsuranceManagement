@model UI.Models.PolicyViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Your existing head content remains unchanged -->
</head>
<body>
    <h2>Add Policy</h2>

    @using (Html.BeginForm("AddPolicy", "Policy", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <div>
            <label for="PolicyNumber">Policy Number:</label>
            @Html.TextBoxFor(model => model.PolicyNumber)
            @Html.ValidationMessageFor(model => model.PolicyNumber)
        </div>



        <div>
            <label for="AppliedDate">Applied Date:</label>
            @Html.TextBoxFor(model => model.AppliedDate, new { type = "date" })
            @Html.ValidationMessageFor(model => model.AppliedDate)
        </div>

        <div>
            <label for="Category">Category:</label>
            @Html.TextBoxFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>

        <!-- Add other form fields for additional properties -->

        <div>
            <input type="submit" value="Submit" />
        </div>
    }
</body>
</html>


