@model List<DAL.Policy>

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        h2 {
            color: #007bff; /* Blue color for the heading */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #007bff; /* Blue background color for the header */
            color: #fff; /* White text color for the header */
        }

        tbody tr:hover {
            background-color: #f0f8ff; /* Light blue background on hover */
        }

        input[type="submit"] {
            background-color: #007bff; /* Blue background color for the submit button */
            color: #fff; /* White text color for the submit button */
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3; /* Darker blue color on hover */
            }
    </style>
    <!-- Other head content... -->
</head>
<body>
    <h2>List of Policies</h2>

    <table>
        <tr>
            <th>Policy ID</th>
            <th>Policy Number</th>
            <th>Applied Date</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
        @foreach (var policy in Model)
        {
            <tr>
                <td>@policy.PolicyId</td>
                <td>@policy.PolicyNumber</td>
                <td>@policy.AppliedDate.ToShortDateString()</td>
                <td>@policy.Category</td>
                <td>
                    @using (Html.BeginForm("Apply", "Customer", FormMethod.Post))
                    {
                        @Html.Hidden("policyId", policy.PolicyId)
                        <input type="submit" value="Apply" />
                    }
                </td>
            </tr>
        }
    </table>
</body>
</html>


