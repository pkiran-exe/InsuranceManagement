
    @{
        Layout = "~/Views/Shared/CustomerLayout.cshtml";
    }
    <style>
        .content {
            margin-left: 270px;
            padding: 20px;
        }

        /* Style the web form elements as needed */
        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 1px;
            border: 1px solid #ccc;
            border-radius: 4px;
            outline: none;
        }

        .card {
            margin: 2px; /* Adjust the margin to reduce space between cards */
            padding: 1px; /* Adjust the padding to control the size of the cards */
            border: none;
            background-color: darkslateblue;
        }

        .card-title {
            color: white;
        }
    </style>


    <div class="content">
        <div class="row">
            <div class="col-md-6">
                <a href="@Url.Action("ViewPoliciesToApply", "Customer")">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Available Policy</h5>
                            <br /> <br />
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("AppliedPolicies", "Customer")">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Applied Policies</h5>
                            <br /> <br />
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <br /> <br />

        <div class="row">
            <div class="col-md-6">
                <a href="@Url.Action("Categories", "Customer")">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Policy Categories</h5>
                            <br /> <br />
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("AskCustomerId", "Customer")">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Questions</h5>
                            <br /> <br />
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>


